// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Modèle Utilisateur
model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  resources Resource[] // Relation : Un user a plusieurs ressources
}

// 2. Modèle Ressource (Lien, Note, etc.)
model Resource {
  id          Int       @id @default(autoincrement())
  title       String
  type        String    // Ex: "LINK", "NOTE", "CONTACT"
  
  // L'astuce : On stocke tout ici (url, texte, téléphone...)
  content     Json      
  
  isFavorite  Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  
  categoryId  Int?      // Optionnel au début
  category    Category? @relation(fields: [categoryId], references: [id])

  tags        Tag[]     // Relation Many-to-Many automatique
}

// 3. Modèle Catégorie
model Category {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  resources Resource[]
}

// 4. Modèle Tag
model Tag {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  resources Resource[] // Prisma gère la table de liaison tout seul
}